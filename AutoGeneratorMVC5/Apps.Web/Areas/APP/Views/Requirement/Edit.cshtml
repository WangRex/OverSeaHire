<script type="text/javascript">
    var treeData = {};
    $(function () {
        //加载编辑器
        var ue = UE.getEditor('Description', {
            toolbars: [[
                'fullscreen',
                'bold', 'italic', 'underline', 'forecolor', 'insertorderedlist',
                'fontfamily', 'fontsize',
                'justifyleft', 'justifycenter',
                'link', 'unlink',
                'simpleupload', 'snapscreen'
            ]],
