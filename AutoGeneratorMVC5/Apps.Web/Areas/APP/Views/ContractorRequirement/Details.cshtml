@model Apps.Models.App.RequirementDetailsVm
@using Apps.Web.Core;
@using Apps.Common;
@using Apps.Models.App;
@using Apps.Web;
@using Apps.Locale;
@using Apps.Models.Sys;
@{
    ViewBag.Title = "详情";
    Layout = "~/Views/Shared/_Index_LayoutEdit.cshtml";
    List<permModel> perm = null;
}
<link href="~/Content/CustomStyle.css" />
<script type="text/javascript">
    $(function () {
        var rowId = "@Model.Id";
        $("#btnReturn").click(function () {
            frameReturnByClose();
        });
        $("#btnApplyJob").click(function () {
            $("#modalwindow").html("<iframe width='100%' height='99%'  frameborder='0' src='@Url.Action("IndexResume")?id=" + rowId + "&Ieguid=" + GetGuid() + "'></iframe>");
            $("#modalwindow").window({ title: '推荐人列表', width: 900, height: 400, iconCls: 'fa fa-pencil' }).window('open');
        });
        $("#btnApplyedResume").click(function () {
            $("#modalwindow").html("<iframe width='100%' height='99%'  frameborder='0' src='/app/ContractorApplyedResume/IndexResume?id=" + rowId + "&Ieguid=" + GetGuid() + "'></iframe>");
            $("#modalwindow").window({ title: '应聘的简历列表', width: 900, height: 400, iconCls: 'fa fa-pencil' }).window('open');
        });
        $("#btnRecommendResume").click(function () {
            $("#modalwindow").html("<iframe width='100%' height='99%'  frameborder='0' src='/app/ContractorRecommendResume/IndexResume?id=" + rowId + "&Ieguid=" + GetGuid() + "'></iframe>");
            $("#modalwindow").window({ title: '推荐的简历列表', width: 900, height: 400, iconCls: 'fa fa-pencil' }).window('open');
        });
        $("#btnInviteResume").click(function () {
            $("#modalwindow").html("<iframe width='100%' height='99%'  frameborder='0' src='/app/ContractorInviteResume/IndexResume?id=" + rowId + "&Ieguid=" + GetGuid() + "'></iframe>");
            $("#modalwindow").window({ title: '邀请和面试的简历列表', width: 900, height: 400, iconCls: 'fa fa-pencil' }).window('open');
        });
        $("#btnProceedingResume").click(function () {
            $("#modalwindow").html("<iframe width='100%' height='99%'  frameborder='0' src='/app/ContractorProceedingResume/IndexResume?id=" + rowId + "&Ieguid=" + GetGuid() + "'></iframe>");
            $("#modalwindow").window({ title: '办理中的简历列表', width: 900, height: 400, iconCls: 'fa fa-pencil' }).window('open');
        });
    });
    //ifram 返回
    function frameReturnByClose() {
        var menuName = window.parent.$('#mainTab').tabs('getSelected').panel('options').title;
        var ptitle = window.parent.globalTabObj[menuName];
        window.parent.closeTab(menuName, ptitle, "app/Requirement", "fa fa-money");
    }
</script>
<div id="modalwindow" class="easyui-window" style="width:800px; height:400px;" data-options="modal:true,closed:true,minimizable:false,shadow:false"></div>
<div class="mvctool bgb">
    @Html.ToolButton("btnReturn", "fa fa-reply", Resource.Reply, true)
    @Html.ToolButton("btnApplyJob", "fa fa-pencil", "选人", true)
    @Html.ToolButton("btnApplyedResume", "fa fa-edit", "应聘的简历", true)
    @Html.ToolButton("btnRecommendResume", "fa fa-diamond", "推荐的简历", true)
    @Html.ToolButton("btnInviteResume", "fa fa-moon-o", "邀请和面试的简历", true)
    @Html.ToolButton("btnProceedingResume", "fa fa-suitcase", "办理中的简历", false)
</div>

<div style="top:40px;position:fixed;width:100%">
    <div class="row">
        <div class="col-15 textalignright mr10">@Model.Title</div>
        <div class="col-15 textalignleft ml10">@Model.YearSalary</div>
        <div class="col-15 textalignright mr10">工作地点</div>
        <div class="col-15 textalignleft ml10">@Model.Country</div>
        <div class="col-15 textalignright mr10">性别要求</div>
        <div class="col-15 textalignleft ml10">@Model.Sex</div>
    </div>
    <div class="row">
        <div class="col-15 textalignright mr10">年龄要求</div>
        <div class="col-15 textalignleft ml10">@Model.AgeLimit</div>
        <div class="col-15 textalignright mr10">工种要求</div>
        <div class="col-15 textalignleft ml10">@Model.Position</div>
        <div class="col-15 textalignright mr10">职位描述</div>
        <div class="col-15 textalignleft ml10">@Model.Tag</div>
    </div>
    <div class="row">
        <div class="col-15 textalignright mr10">保证金</div>
        <div class="col-15 textalignleft ml10">@Model.PromiseMoney</div>
        <div class="col-15 textalignright mr10">服务费</div>
        <div class="col-15 textalignleft ml10">@Model.ServiceMoney</div>
        <div class="col-15 textalignright mr10">服务费尾款</div>
        <div class="col-15 textalignleft ml10">@Model.ServiceTailMoney</div>
    </div>
    <div class="row">
        <div class="col-15 textalignright mr10">总服务费</div>
        <div class="col-15 textalignleft ml10">@Model.TotalServiceMoney</div>
    </div>
    <div class="row">
        <div class="col-15 textalignright mr10">说明</div>
        <div class="col-15 textalignleft ml10">@Html.Raw(@Model.Description)</div>
    </div>

</div>